<odoo>
    <record id="view_survey_wizard_form" model="ir.ui.view">
        <field name="name">survey.wizard.form</field>
        <field name="model">survey.wizard</field>
        <field name="arch" type="xml">
            <form string="Survey Wizard">
                <sheet>
                    <group>
                        <field name="partner_id"/>
                        <field name="val_financiera" widget="priority"/>
                        <field name="val_tecnica" widget="priority"/>
                        <field name="cal_producto" widget="priority"/>
                        <field name="demora_entrega" widget="priority"/>
                    </group>
                    <footer>
                        <button name="action_confirm" string="Confirmar" type="object" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>